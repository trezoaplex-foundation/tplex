{
  "name": "tplex",
  "version": "0.0.0",
  "description": "Trezoaplex CLI to interact with the Trezoaplex SDK.",
  "bin": {
    "tplex": "dist/src/tplex.js"
  },
  "scripts": {
    "check:publish-ready": "yarn build && yarn test",
    "preversion": "yarn check:publish-ready",
    "prepublishOnly": "yarn check:publish-ready",
    "postpublish": "git push origin && git push origin --tags",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "amman:start": "DEBUG='amman*(info|debug|error)' amman start",
    "amman:stop": "amman stop",
    "test": "tape dist/test/*.js",
    "lint": "prettier -c ./src/ && prettier -c ./test/",
    "lint:fix": "prettier --write ./src && prettier --write ./test/"
  },
  "repository": "git@github.com:trezoaplex-foundation/tplex.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "Apache-2.0",
  "private": false,
  "directories": {
    "dist": "./dist/"
  },
  "files": [
    "dist/src/*"
  ],
  "keywords": [
    "trezoa",
    "blockchain",
    "NFT",
    "Trezoaplex",
    "SDK",
    "CLI"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@trezoaplex-foundation/amman-client": "^0.2.2",
    "@trezoaplex-foundation/js": "^0.16.1",
    "@trezoa/web3.js": "^1.63.1",
    "debug": "^4.3.4",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@trezoaplex-foundation/amman": "^0.12.0",
    "@types/debug": "^4.1.7",
    "@types/tape": "^4.13.2",
    "@types/yargs": "^17.0.13",
    "esbuild": "^0.15.10",
    "esbuild-runner": "^2.2.1",
    "prettier": "^2.7.1",
    "tape": "^5.6.1",
    "typescript": "^4.8.4"
  }
}
